{% extends 'base.html.twig' %}

{% block title %}Détails{% endblock %}
{% block jumbotron %} {{ page_name }} {% endblock %}

{% block body %}
<div class="container">
	<h2>Détails du profil choisi</h2>
	<div class="row">
		<div class="col-md-6">
			<p>A venir : photos du profil</p>
			
		</div>
		<div class="col-md-6">
			<div class="card">
				<div class="card-body">
					<h3 class="card-title">{{ profile.alias}}</h3>
					<p class="card-text">
						{{ profile.email }}	
					</p>
					<div class="text-primary">
						{{ profile.lastname }} {{ profile.firstname }}	
					</div>	
				</div>	
			</div>
		</div>
	</div>
</div>
	
{% endblock %}